<div id="sessions-loader">
    <div class="progressbar-fliplearning">
        <div class="indeterminate"></div>
    </div>
</div>

<v-app id="logs" class="fliplearning">
    <v-main>
        <pageheader :pagetitle="strings.title" :helptitle="strings.helplabel" :exitbutton="strings.exitbutton"
                    :helpcontents="get_help_content()" :groups="groups" :courseid="courseid" :userid="userid"></pageheader>
        <v-row>
            <v-col cols="12" md="6" >
                <v-layout justify-center>
                    <h5 style="margin-top:10px; display:none;" v-text="strings.logs_title_MoodleSetpoint_title" id="logsSetpointMoodle"></h5>
                </v-layout>
                <v-layout justify-center>
                    <v-card-actions>
                        <v-card elevation="2">
                            <v-card-text>
                                <v-list-item-content>
                                    <v-list-item-content>
                                        <v-list-item-subtitle v-text="strings.logs_indicators_first_date"></v-list-item-subtitle>
                                        <v-text-field :rules="dateRules" id="beginDateMoodle" type="date" required></v-text-field>
                                        <v-list-item-subtitle v-text="strings.logs_indicators_last_date"></v-list-item-subtitle>
                                        <v-text-field :rules="dateRules" id="lastDateMoodle" type="date" required></v-text-field>
                                    </v-list-item-content>
                                </v-list-item-content>
                            </v-card-text>
                            <v-card>
                    </v-card-actions>
                </v-layout>
                <v-layout justify-center>
                    <v-card-actions>
                        <v-btn style="background-color: rgb(17, 138, 178); border-color: rgb(17, 138, 178);"
                               v-text="strings.logs_valid_Moodlebtn" @click="get_Moodlefile()"
                               class="white--text v-btn v-btn--contained theme--light v-size--default"
                               id="downloadButtonMoodle"
                        ></v-btn>
                    </v-card-actions>
                </v-layout>
                <v-layout justify-center>
                    <v-card-actions>
                        <span style="display:none;" class="caption" id="helpMoodle">
                            <v-icon small v-text="'mdi-help-circle-outline'"  @click="open_chart_help('download_moodle')"></v-icon>
                            <span @click="open_chart_help('download_moodle')">A propos des actions réalisées sur Moodle</span>
                        </span>
                    </v-card-actions>
                </v-layout>
            </v-col>

            <v-col cols="12" md="6">
                <v-layout justify-center>
                    <h5 style="margin-top:10px; display:none;" v-text="strings.logs_title_MMPSetpoint_title" id="logsSetpointNMP"></h5>
                </v-layout>
                <v-layout justify-center>
                    <v-card-actions>
                        <v-card elevation="2">
                            <v-card-text>
                                <v-list-item-content>
                                    <v-list-item-content>
                                        <v-list-item-subtitle v-text="strings.logs_indicators_first_date"></v-list-item-subtitle>
                                        <v-text-field :rules="dateRules" id="beginDateNMP" type="date" required></v-text-field>
                                        <v-list-item-subtitle v-text="strings.logs_indicators_last_date"></v-list-item-subtitle>
                                        <v-text-field :rules="dateRules" id="lastDateNMP" type="date" required></v-text-field>
                                    </v-list-item-content>
                                </v-list-item-content>
                            </v-card-text>
                            <v-card>
                    </v-card-actions>
                </v-layout>
                <v-layout justify-center>
                    <v-card-actions>
                        <v-btn style="background-color: rgb(17, 138, 178); border-color: rgb(17, 138, 178);"
                               v-text="strings.logs_valid_NMPbtn" @click="get_NMPfile()"
                               class="white--text v-btn v-btn--contained theme--light v-size--default"
                               id="downloadButtonNMP"
                        ></v-btn>
                    </v-card-actions>
                </v-layout>
                <v-layout justify-center>
                    <v-card-actions>
                        <span  style="display:none;" class="caption" id="helpNMP">
                            <v-icon small v-text="'mdi-help-circle-outline'" @click="open_chart_help('download_nmp')"></v-icon>
                            <span @click="open_chart_help('download_nmp')">A propos des actions réalisées sur Note My Progress</span>
                        </span>
                    </v-card-actions>
                </v-layout>
            </v-col>
        </v-row>

        <v-row justify="center">
            <v-col sm="12">
                <helpdialog
                        :dialog="help_dialog"
                        :title="strings.helplabel"
                        :contents="help_contents"
                        :exit="strings.exitbutton"
                        @update_dialog="update_help_dialog"
                ></helpdialog>
            </v-col>
        </v-row>

        <v-row class="justify-center">
            <span v-text="get_timezone()"></span>
        </v-row>

        </v-container>
    </v-main>
</v-app>